  <body>

    <div class="card">
      <div class="card-body">
        
<!-- Modal PUT-->
        <form action="/api/customer/update/{{ds.id}}" method="PUT">
        
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="floatingName"
              name="customer"
              value="{{ds.customer}}"
            />
            <label for="floatingName">Customer</label>
          </div>
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="floatingPassword"
              name="phone"
              value="{{ds.phone}}"
            />
            <label for="floatingPassword">Phone</label>
          </div>
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="floatingPassword"
              name="address"
              value="{{ds.address}}"
              style="height: 200px;"
            />
            <label for="floatingPassword">Address</label>
          </div>
          <button
            id="liveToastBtn"
            type="submit"
            value="Submit"
            class="btn btn-primary"
          >Edit</button>
        </form>

      </div>
</div>
